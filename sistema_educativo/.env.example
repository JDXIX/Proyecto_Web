# Django Core Settings
SECRET_KEY=django-insecure-change-this-in-production-use-a-secure-random-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings (adjust the frontend port if needed)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database Settings
# For development, SQLite is used by default (no configuration needed)
# For production, uncomment and configure DATABASE_URL:
# DATABASE_URL=postgres://username:password@localhost:5432/database_name

# AI Recommendations (Anthropic Claude API)
# Get your API key from: https://console.anthropic.com/
# Leave empty to disable AI recommendations
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# JWT Token Settings (optional - defaults are configured in settings.py)
# ACCESS_TOKEN_LIFETIME=10
# REFRESH_TOKEN_LIFETIME=1440

# File Upload Settings
MAX_UPLOAD_SIZE=104857600

# Attention Monitoring Settings
UMBRALES_ATENCION_ALTO=80
UMBRALES_ATENCION_MEDIO=50
UMBRALES_ATENCION_BAJO=0